<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorYellow"
    tools:context=".ShopActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:fontFamily="sans-serif-black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="HomeCOOK"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addRecipe"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_weight="1"
            android:background="#414148"
            android:text="장보기 종료"
            android:textColor="#fcfbfc"
            android:textSize="10sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="35sp"
            android:layout_weight="5"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/searchRecipe3"
            android:layout_width="12dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            app:srcCompat="@drawable/search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorDarkYellow"
            android:fontFamily="sans-serif-black"
            android:padding="20dp"
            android:text="물 200 ml"
            android:textColor="#808080"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorDarkYellow"
            android:fontFamily="sans-serif-black"
            android:padding="20dp"
            android:text="호박 1 개"
            android:textColor="#808080"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/linegogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#9F9F9F"
            android:fontFamily="sans-serif-black"
            android:padding="20dp"
            android:text="된장 100 g"

            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="#bebebe"
            android:id="@+id/recipe_add8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="레시피"/>

        <Button
            android:id="@+id/shop_add8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="장보기"
            android:background="@color/colorYellow"/>

        <Button
            android:background="#bebebe"
            android:id="@+id/cook_add8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="추천쿡" />
    </LinearLayout>
</LinearLayout>